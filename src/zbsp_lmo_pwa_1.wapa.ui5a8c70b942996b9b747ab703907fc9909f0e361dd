sap.ui.define([],                                                                                                                                                                                                                                              
    function () {                                                                                                                                                                                                                                              
        'use strict';                                                                                                                                                                                                                                          
                                                                                                                                                                                                                                                               
        return {                                                                                                                                                                                                                                               
            setCockpitStatusColor: function (Status) {                                                                                                                                                                                                         
                switch (Status) {                                                                                                                                                                                                                              
                    case "PROCESSED":                                                                                                                                                                                                                          
                        return "Success";                                                                                                                                                                                                                      
                    case "PENDING":                                                                                                                                                                                                                            
                        return "Warning";                                                                                                                                                                                                                      
                    // ERROR ou CANCELED                                                                                                                                                                                                                       
                    case "ERROR":                                                                                                                                                                                                                              
                    case "CANCELED":                                                                                                                                                                                                                           
                        return "Error";                                                                                                                                                                                                                        
                    default:                                                                                                                                                                                                                                   
                        break;                                                                                                                                                                                                                                 
                }                                                                                                                                                                                                                                              
            },                                                                                                                                                                                                                                                 
                                                                                                                                                                                                                                                               
            setCockpitStatusText: function (Status) {                                                                                                                                                                                                          
                switch (Status) {                                                                                                                                                                                                                              
                    case "PROCESSED":                                                                                                                                                                                                                          
                        return "Processado";                                                                                                                                                                                                                   
                    case "PENDING":                                                                                                                                                                                                                            
                        return "Pendente";                                                                                                                                                                                                                     
                    case "ERROR":                                                                                                                                                                                                                              
                        return "Erro"                                                                                                                                                                                                                          
                    case "CANCELED":                                                                                                                                                                                                                           
                        return "Cancelado";                                                                                                                                                                                                                    
                    default:                                                                                                                                                                                                                                   
                        break;                                                                                                                                                                                                                                 
                }                                                                                                                                                                                                                                              
            },                                                                                                                                                                                                                                                 
                                                                                                                                                                                                                                                               
            setCockpitMsgText: function (Message) {                                                                                                                                                                                                            
                return Message?.toUpperCase() === "PENDING" ? "" : Message;                                                                                                                                                                                    
            },                                                                                                                                                                                                                                                 
                                                                                                                                                                                                                                                               
            setPageNumber: function (PageNumber) {                                                                                                                                                                                                             
                return `PÃ¡gina ${PageNumber + 1}`;                                                                                                                                                                                                             
            }                                                                                                                                                                                                                                                  
        }                                                                                                                                                                                                                                                      
    });                                                                                                                                                                                                                                                        
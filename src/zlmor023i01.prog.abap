MODULE user_command_0100 INPUT.
  CASE sy-ucomm.
    WHEN 'BACK' OR 'EXIT' OR 'CANCEL'.
      SET SCREEN 0.
      LEAVE SCREEN.
    WHEN '&DELETAR'.
      MESSAGE S398 WITH 'DELETAR' DISPLAY LIKE 'E'.
  ENDCASE.

ENDMODULE.

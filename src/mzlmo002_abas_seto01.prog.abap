MODULE abas_set OUTPUT.
  tabstrip-activetab = gv_ucomm.
  CASE gv_ucomm.
    WHEN 'ABA_01'.
      sy-dynnr = '0101'.
    WHEN 'ABA_02'.
      sy-dynnr = '0102'.
    WHEN 'ABA_03'.
      sy-dynnr = '0103'.
  ENDCASE.

ENDMODULE.

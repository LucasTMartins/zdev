MODULE abas_get INPUT.
  CASE sy-ucomm.
    WHEN 'ABA_01'.
      gv_ucomm = 'ABA_01'.
    WHEN 'ABA_02'.
      gv_ucomm = 'ABA_02'.
    WHEN 'ABA_03'.
      gv_ucomm = 'ABA_03'.
  ENDCASE.
ENDMODULE.
*&---------------------------------------------------------------------*
*&      Module  USER_COMMAND_0100  INPUT
*&---------------------------------------------------------------------*
*       text
*----------------------------------------------------------------------*
MODULE user_command_0100 INPUT.
  IF sy-ucomm EQ 'BACK' OR
     sy-ucomm EQ 'EXIT' OR
     sy-ucomm EQ 'CANCEL'.
    LEAVE TO SCREEN 0.
  ENDIF.
ENDMODULE.
